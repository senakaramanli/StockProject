@using MVCStok.Models.Entity
@model List<Urunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>URUN ID</th>
            <th>URUN ADI</th>
            <th>MARKASI</th>
            <th>KATEGORI</th>
            <th>FIYAT</th>
            <th>STOK</th>
            <th>SIL</th>
            <th>GUNCELLE</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var urn in Model)
        {
            <tr>
                <th>
                    @urn.URUNID
                </th>
                <td>
                    @urn.URUNAD
                </td>
                <td>
                    @urn.MARKA
                </td>
                <td>
                    @urn.Kategoriler.KATEGORIAD
                </td>
                <td>
                    @urn.FIYAT
                </td>
                <td>
                    @urn.Stok
                </td>
                <td><a href="/Urunler/SIL/@urn.URUNID" class="btn btn-danger">SIL</a></td>
                <td><a href="/Urunler/UrunGetir/@urn.URUNID" class="btn btn-success">GUNCELLE</a></td>


            </tr>
        }

    </tbody>
</table>
<a href="/Urunler/YeniUrun/" class="btn btn-primary">YENI URUN EKLE</a>


<script type="text/javascript" src="https://cdn.datatables.net/v/bs-3.3.7/jq-2.2.4/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.3.1/b-colvis-1.3.1/b-flash-1.3.1/b-html5-1.3.1/b-print-1.3.1/r-2.1.1/sc-1.4.2/se-1.2.2/datatables.min.js"></script>

<link href="~/Content/DataTables/css/dataTables.bootstrap.css" rel="stylesheet" />
<link href="~/Content/DataTables/css/dataTables.material.css" rel="stylesheet" />

<script>
    $('#tbl1').DataTable();
</script>