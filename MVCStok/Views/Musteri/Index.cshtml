@using MVCStok.Models.Entity
@model List<Musteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (@Html.BeginForm("Index", "Musteri", FormMethod.Get))
            {
                <p>
                    Aranacak Musteri Adi: @Html.TextBox("p")
                    <input type="submit" value="Ara"  />      
                </p>
            }

<table class="table table-bordered">
    <tr>

        <th>Musteri ID</th>
        <th>MUSTERI ADI</th>
        <th>MUSTERI SOYADI</th>
        <th>SIL</th>
        <th>GUNCELLE</th>
        <th>ALERT</th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <th>
                    @item.MUSTERIID
                </th>
                <td>
                    @item.MUSTERIAD
                </td>
                <td>
                    @item.MUSTERISOYAD
                </td>
                <td><a href="/Musteri/Sil/@item.MUSTERIID" class="btn btn-danger">SIL</a></td>
                <td><a href="/Musteri/MusteriGetir/@item.MUSTERIID" class="btn btn-success">GUNCELLE</a></td>
                <td>@Html.ActionLink("SIL BUTONU", "Sil", new { id = item.MUSTERIID }, new { @class = "btn btn-warning", onclick = "return confirm('Silmek istiyor musunuz?')" })</td>

            </tr>

            }
    </tbody>

</table>

<a href="/Musteri/YeniMusteri/" class="btn btn-primary">YENI MUSTERI EKLE</a>