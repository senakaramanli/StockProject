@using MVCStok.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Kategoriler>



@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>KATEGORI ID</th>
        <th>KATEGORI ADI</th>
        <th>SIL</th>
        <th>GUNCELLE</th>
    </tr>

    <tbody>
        @foreach (var ktgr in Model)
        {
            <tr>
                <th>
                    @ktgr.KATEGORIID
                </th>
                <td>
                    @ktgr.KATEGORIAD
                </td>
                <td><a href="/Kategori/Sil/@ktgr.KATEGORIID" class="btn btn-danger">SIL</a></td>
                <td><a href="/Kategori/KategoriGetir/@ktgr.KATEGORIID" class="btn btn-success">GUNCELLE</a></td>
            </tr>
        }

    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index", new { sayfa } ))


<a href="/Kategori/YeniKategori/" class="btn btn-primary">YENI KATEGORI EKLE</a>

